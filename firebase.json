{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/login.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/kyc_manager",
        "destination": "/admin-list.html"
      },
      {
        "source": "/dashboard",
        "destination": "/dashboard.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
